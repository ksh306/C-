#include <stdio.h>

int main()
{
    int x; //상품 개수(종류)
    int in[100]; //상품 입고수량
    int out[100]; //상품 판매수량
    int id;
    int y; //해당 제품의 재고 수량
    int z[100]; //모든 상품의 재고 수량

    printf("상품의 종류 (1부터 100까지) :");
    scanf("%d", &x);

    for (int i = 0;i < x;i++) {
        printf("%d번째 상품 입고수량 입력 :", i + 1);
        scanf("%d", &in[i]);
    }

    for (int i = 0;i < x;i++) {
        printf("%d번쨰 상품 판매수량 입력 :", i + 1);
        scanf("%d", &out[i]);
    }

    printf("ID입력");
    scanf("%d", &id);

    for (int i = 0;i < x;i++) {
        z[i] = in[i] - out[i];
    }

    printf("입력한 상품의 재고 수량 : %d", z[id - 1]);
    for (int i = 0;i < x;i++) {
        printf("\n 모든 상품의 재고 수량 : %d", z[i]);
    }

    return 0;
}
